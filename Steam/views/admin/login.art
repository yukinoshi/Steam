    <div class="login-body" style="background: #212429;">
        <div class="login-container">
            <h4 class="title" style="color: #fff;">登录</h4>
            <div class="login"  style="background: #212429;border: none; box-shadow: none;">
                <form action="/admin/login" method="post" id="loginForm">
                    <div class="form-group">
                        <label style="color: #b8b6b4;" >邮箱地址</label>
                        <input name="email" type="email" style="background: #212429; color: #fff; border: none; box-shadow: none;" class="form-control" placeholder="请输入邮箱地址">
                    </div>
                    <div class="form-group">
                        <label style="color: #b8b6b4;">密码</label>
                        <input name="password" type="password" style="background: #212429; color: #fff; border: none; box-shadow: none;" class="form-control" placeholder="请输入密码">    
                    </div>
                    
		            <p class="text-center">
                        <button type="submit" style="width: 100%;" class="btn btn-primary text-center ">登录</button>
                    </p>
                </form>
            </div>
            <div class="tips"></div>
        </div>
    </div>
